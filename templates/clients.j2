{%  extends "base.j2" %}
{% block title %}Clients{% endblock %}
{% block content %}

    <h1>CLIENTS</h1>
         
         <form action="insert" method="post">
            <fieldset style="position:relative">
		<legend>Client Information:</legend>
			<input type="hidden" name="table name"  value="clients" required>		
                <label>First Name:</label>
                    <input type="text" name="first_name" maxlength= "50" required>
		<br>
		<label>Last Name:</label>
                    <input type="text" name="last_name" maxlength= "50" required>
		<br>
                <label>Street Address:</label>
                    <input type="text" name="street" maxlength= "50" required>
		<br>
                <label>City:</label>
                    <input type="text" name="city" maxlength= "50" required>
               <br>
                <label>State:</label>
                    <select id="state" name="state" required >
			            <option value="">SELECT</option>
                        {%  for state in states %}
                            <option value={{ state }} >{{ states[state] }}</option>
                        {% endfor %}
		            </select>
				 <br>            
		<label>Zip:</label>
                    <input type="text" name="zip" pattern="[0-9]{5}" maxlength= "10" required>
		<label>Phone:</label>
		    <input type="tel" name="phone" placeholder="555-555-5555" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" maxlength= "12" required>
		<label>*E-mail:</label>
		    <input type="email" name="email" maxlength= "100" >
               <div style="position: absolute; bottom: 0; right: 0; padding: 8px;"><em>* indicates optional entry field </em></div> 
            </fieldset>
	    <input class= "button" type="submit" value="Add Client">
        </form>
	<br>
     
		<h3>Clients Table</h3>
		<table>
          <tr>
			<th>id</th>
	        <th>First Name</th>
	        <th>Last Name</th>
	        <th>Street Address</th>
			<th>City</th>
			<th>State</th>
			<th>Zip</th>
			<th>Phone</th>
			<th>E-mail</th>
			<th  style= "text-align: center;">Action</th>
	      </tr>
	      {% for client in clients %}
			<tr>
				{% for key in client.keys() %}
				<td>{{client[key]}}</td>
				{% endfor %}
				<form action="update" method="post">
                    {% set var = client['client_id'] %}
				<input type="hidden" name="table" value="clients" required>
				<input type="hidden" name="client_id"  value={{ var }} required>
				<td><input style="width:95%" class="update_button" type="submit" value="Update"></td>
				</form>	
				</tr>
			{% endfor %}
        </table>

{% endblock %}
